<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/inventory.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <div id="heading">
        <h1>Inventory</h1>
        <a href="/product/new">Add a Product</a>
      </div>
      <div id="content">
        <form name="sortFilter" action="/inventory" method="GET">
          <label for="sort" id="sort_dropdown">
            <b>Sort:</b>
            <select onchange="sortFilter.submit()" name="sort">
              <% sorts.forEach(sort => { %> <% if (queries.sort != undefined &&
              queries.sort.includes(sort.message)) { %>
              <option name="sort" value="<%= sort.value %>" selected>
                <%= sort.message %>
              </option>
              <% } else { %>
              <option name="sort" value="<%= sort.value %>">
                <%= sort.message %>
              </option>
              <% }%> <% }); %>
            </select>
          </label>
          <ul>
            <b>Filter By Genre:</b>
            <% genres.forEach(genre => { %>
            <li>
              <label for="<%= genre.name %>">
                <% if (queries.genre != undefined &&
                queries.genre.includes(genre.name)) { %>
                <input
                  type="checkbox"
                  name="genre"
                  id="<%= genre.name %>"
                  value="<%= genre.name %>"
                  checked
                />
                <% } else { %>
                <input
                  type="checkbox"
                  name="genre"
                  id="<%= genre.name %>"
                  value="<%= genre.name %>"
                />
                <% } %> <%= genre.name %>
              </label>
            </li>
            <% }); %>
          </ul>
          <ul>
            <b>Filter By Developer:</b>
            <% developers.forEach(developer => { %>
            <li>
              <label for="<%= developer.name %>">
                <% if (queries.developer != undefined &&
                queries.developer.includes(developer.name)) { %>
                <input
                  type="checkbox"
                  name="developer"
                  id="<%= developer.name %>"
                  value="<%= developer.name %>"
                  checked
                />
                <% } else { %>
                <input
                  type="checkbox"
                  name="developer"
                  id="<%= developer.name %>"
                  value="<%= developer.name %>"
                />
                <% } %> <%= developer.name %>
              </label>
            </li>
            <% }); %>
          </ul>
          <button type="submit" id="filter_button">Filter</button>
        </form>
        <% if(products.length === 0) { %>
        <div>No Matching Results Based On Applied Filters!</div>
        <% } else { %>
        <ul id="inventory">
          <% products.forEach(product => { %>
          <li>
            <a href="/product/<%= product.name %>">
              <div class="card_image_container">
                <img
                  src="/img/<%= product.image %>"
                  rel="image of product"
                />
              </div>
              <div id="card_details">
                <div id="main_details">
                  <div id="title"><b><%= product.name %></b></div>
                  <div>$<%= product.price %></div>
                </div>
                <div class="filter_var">
                  Genres:
                  <div>
                    <%= (product.genres != undefined) ? product.genres : (N/A)
                    %>
                  </div>
                </div>
                <div class="filter_var">
                  Developers:
                  <div>
                    <%= (product.developers != undefined) ? product.developers :
                    (N/A) %>
                  </div>
                </div>
              </div>
              <div id="product_quantity"><%= product.quantity %></div>
            </a>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </div>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
