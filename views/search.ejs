<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/thumbnail-removebg-preview.png" type="image/png">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/search.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <ul id="product_search_list">
        <% if (products.length === 0) { %>
          <li id="error_search_card">
            <h2>No Results Found</h2>
            <a href="/inventory">Return to Inventory</a>
          </li>
        <% } %>
        <% if(locals.products) %> <% products.forEach(product => { %>
        <li id="product_search_card">
          <a href="/product/<%= product.name %>">
            <div id="product_search_image_container">
              <img
                src="/img/<%= product.image %>"
                rel="image of <%= product.name %>"
                id="product_search_image"
              />
            </div>
            <div id="product_search_description">
              <h3><%= product.name %></h3>
              <h4>$<%= product.price %></h4>
              <h5>Developers: <%= product.developers %></h5>
              <h5>Genres: <%= product.genres %></h5>
              <h5>Quantity: <%= product.quantity %></h5>
            </div>
          </a>
        </li>
        <% }); %>
      </ul>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
