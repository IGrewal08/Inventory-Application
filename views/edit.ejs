<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/img/thumbnail-removebg-preview.png" type="image/png">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="stylesheet" href="/product_edit.css" />
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <form
        action="/product/<%= name %>/edit"
        method="POST"
        id="product_edit_form"
        enctype="multipart/form-data"
      >
        <div id="primary_filter">
          <label for="title">
            Title:
            <input
              type="text"
              name="name"
              id="name"
              value="<%= product.name %>"
              required
            />
          </label>
          <label for="price">
            Price:
            <input
              type="number"
              step="0.01"
              min="0"
              name="price"
              id="price"
              value="<%= product.price %>"
              required
            />
          </label>
          <label for="quantity">
            Quantity:
            <input
              type="number"
              step="1"
              min="0"
              name="quantity"
              value="<%= product.quantity %>"
              required
            />
          </label>
        </div>
        <label for="description" id="description_form">
          Description:
          <textarea
            style="text-align: left"
            cols="80"
            rows="1"
            type="text"
            minlength="1"
            maxlength="250"
            name="description"
            value="<%= product.description %>"
            required
          >
<%= product.description %></textarea
          >
        </label>
        <label id="developer_form">
          Developers:
          <select name="developer">
            <% developers.map(developer => { %> <% if (productDevelopers[0] !=
            undefined && productDevelopers[0] === developer.name) { %>
            <option
              name="developer_<%= developer.id%>"
              value="<%= developer.id %>"
              selected
            >
              <%= developer.name %>
            </option>
            <% } else { %>
            <option
              name="developer_<%= developer.id%>"
              value="<%= developer.id %>"
            >
              <%= developer.name %>
            </option>
            <% } %> <% });%>
          </select>
          <% for (let i=1; i <= 2; i++) { %>
          <select name="developer">
            <option name="developer_0" selected>-</option>
            <% developers.map(developer => { %> <% if (productDevelopers[i] !=
            undefined && productDevelopers[i] === developer.name) { %>
            <option
              name="developer_<%= developer.id%>"
              value="<%= developer.id %>"
              selected
            >
              <%= developer.name %>
            </option>
            <% } else { %>
            <option
              name="developer_<%= developer.id%>"
              value="<%= developer.id %>"
            >
              <%= developer.name %>
            </option>
            <% } %> <% });%>
          </select>
          <% } %>
        </label>
        <label id="genre_form">
          Genres:
          <select name="genre">
            <% genres.map(genre => { %> <% if (productGenres[0] != undefined &&
            productGenres[0] === genre.name) { %>
            <option
              name="genre_<%= genre.id%>"
              value="<%= genre.id %>"
              selected
            >
              <%= genre.name %>
            </option>
            <% } else { %>
            <option name="genre_<%= genre.id%>" value="<%= genre.id %>">
              <%= genre.name %>
            </option>
            <% } %> <% });%>
          </select>
          <% for (let i=1; i <= 2; i++) { %>
          <select name="genre">
            <option name="genre_0" selected>-</option>
            <% genres.map(genre => { %> <% if (productGenres[i] != undefined &&
            productGenres[i] === genre.name) { %>
            <option
              name="genre_<%= genre.id%>"
              value="<%= genre.id %>"
              selected
            >
              <%= genre.name %>
            </option>
            <% } else { %>
            <option name="genre_<%= genre.id%>" value="<%= genre.id %>">
              <%= genre.name %>
            </option>
            <% } %> <% });%>
          </select>
          <% } %>
        </label>
        <input
          type="hidden"
          name="_name"
          id="name"
          value="<%= product.name %>"
        />
        <label for="image">
          <input 
            type="file" 
            id="image" 
            name="image" 
            accept="image/jpeg"
         />
        </label>
        <button type="submit" id="add_form_new">Add</button>
      </form>
    </main>
    <%- include('partials/footer') %>
  </body>
</html>
